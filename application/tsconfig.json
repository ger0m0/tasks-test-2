{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "typeRoots": [
      "node_modules/@types/",
      "**/index.d.ts"
    ],
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "esm": true,
  },
}